<Page x:Class="YrlmzTakipSistemi.TransactionAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YrlmzTakipSistemi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="İşlem Ekleme Sayfası">

    <Grid Background="#2B2B2B">
        <TextBlock Name="TitleTextBlock"
               Text="Yeni İşlem Ekle" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               FontSize="28" 
               FontWeight="Bold" 
               Foreground="#FFFFFF" 
               Margin="0,20,0,0"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Açıklama:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="DescriptionTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Notlar:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="NoteTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Adet:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="QuantityTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Fiyat:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="PriceTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Ücret:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="AmountTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Ödenen:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="PaidTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>
        </StackPanel>

        <Button Content="İşlem Ekle" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom" 
            Margin="0,0,0,40" 
            Background="#388E3C"
            Style="{StaticResource ModernButtonStyle}" 
            Click="SaveTransactionButton_Click"/>
    </Grid>
</Page>

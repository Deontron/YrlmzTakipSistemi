<Page x:Class="YrlmzTakipSistemi.InvoiceAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YrlmzTakipSistemi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InvoiceAddPage">

    <Grid Background="#2B2B2B">
        <TextBlock Name="TitleTextBlock"
        Text="Yeni Fatura Ekle" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Top" 
        FontSize="28" 
        FontWeight="Bold" 
        Foreground="#FFFFFF" 
        Margin="0,20,0,0"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0" Grid.Column="0">
                <TextBlock Text="Müşteri:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                <TextBox Name="CostumerTextBox" Width="250" Height="35" FontSize="14"
                  Background="#1E1E1E" Foreground="White" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="FaturaNo:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                <TextBox Name="InvoiceNoTextBox" Width="250" Height="35" FontSize="18"
              Background="#1E1E1E" Foreground="White" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="FaturaTarihi:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                <DatePicker Name="InvoiceDatePicker" Margin="20,0,0,0">
                    <DatePicker.Resources>
                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="#2B2B2B"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Tutar:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                <TextBox Name="AmountTextBox" Width="250" Height="35" FontSize="18"
              Background="#1E1E1E" Foreground="White" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="KDV:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                <TextBox Name="KdvTextBox" Width="250" Height="35" FontSize="18"
                Background="#1E1E1E" Foreground="White" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Toplam:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                <TextBox Name="TotalTextBox" Width="250" Height="35" FontSize="18"
                Background="#1E1E1E" Foreground="White" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="2" Margin="0,20,0,0">

            <Button Content="Geri" Background="#3B4D61" Style="{StaticResource ModernButtonStyle}" Click="BackButton_Click"/>
            <Button Content="Fatura Ekle" Background="#388E3C" Style="{StaticResource ModernButtonStyle}" Click="SaveInvoiceButton_Click"/>

        </StackPanel>
    </Grid>
</Page>

<Window x:Class="YrlmzTakipSistemi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YrlmzTakipSistemi"
        mc:Ignorable="d"
        Title="Takip Sistemi" Height="450" Width="800">
    <Grid>
        <!-- Menü Çubuğu -->
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Dosya">
                <MenuItem Header="Yedekle" />
                <MenuItem Header="Çıkış" />
            </MenuItem>
            <MenuItem Header="Müşteriler" />
            <MenuItem Header="Gelir/Gider" />
            <MenuItem Header="Faturalar" />
        </Menu>

        <!-- Ana İçerik Alanı -->
        <DockPanel Margin="10,30,10,10">
            <!-- Sol Menü Butonları -->
            <StackPanel DockPanel.Dock="Left" Width="200" Background="#F0F0F0" Margin="0,0,10,0">
                <TextBlock Text="Menü" FontSize="16" FontWeight="Bold" Margin="10" />
                <Button Content="Müşteriler" Margin="10" Height="40" Click="CustomersButton_Click" />
                <Button Content="Gelir/Gider" Margin="10" Height="40" Click="IncomeExpenseButton_Click" />
                <Button Content="Faturalar" Margin="10" Height="40" Click="InvoiceButton_Click" />
            </StackPanel>

            <!-- İçerik Alanı: Frame -->
            <Frame Name="MainFrame" Background="#FFFFFF" />
            <TextBlock Text="Hoşgeldiniz!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>

        </DockPanel>
    </Grid>
</Window>

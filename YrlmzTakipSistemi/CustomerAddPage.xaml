<Page x:Class="YrlmzTakipSistemi.CustomerAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YrlmzTakipSistemi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Müşteri Ekleme Sayfası">

    <Grid Background="#2B2B2B">
        <!-- Başlık -->
        <TextBlock Text="Yeni Müşteri Ekle" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#FFFFFF" 
                   Margin="0,20,0,0"/>

        <!-- Form Alanları -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0">
            <!-- Ad Soyad -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Ad Soyad:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="NameTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <!-- Telefon -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Telefon:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="PhoneTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <!-- E-posta -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="E-posta:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="EmailTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <!-- Adres -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Adres:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="AddressTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>
        </StackPanel>

        <!-- Ekleme Butonu -->
        <Button Content="Müşteri Ekle" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,40" 
                Background="#388E3C"
                Style="{StaticResource ModernButtonStyle}" 
                Click="SaveCustomerButton_Click"/>
    </Grid>
</Page>

<Page x:Class="YrlmzTakipSistemi.TransactionAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YrlmzTakipSistemi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="İşlem Ekleme Sayfası">

    <Grid Background="#F4F4F4">
        <TextBlock Text="Yeni İşlem Ekle" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="10"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,100,50,0" >
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ad Soyad:" VerticalAlignment="Center" Width="100" FontSize="16" Foreground="#333"/>
                <TextBox Name="NameTextBox" Width="200" Height="30" FontSize="14"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Telefon:" VerticalAlignment="Center" Width="100" FontSize="16" Foreground="#333"/>
                <TextBox Name="PhoneTextBox" Width="200" Height="30" FontSize="14"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="E-posta:" VerticalAlignment="Center" Width="100" FontSize="16" Foreground="#333"/>
                <TextBox Name="EmailTextBox" Width="200" Height="30" FontSize="14"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Adres:" VerticalAlignment="Center" Width="100" FontSize="16" Foreground="#333"/>
                <TextBox Name="AddressTextBox" Width="200" Height="30" FontSize="14"/>
            </StackPanel>

            <Button Content="İşlem Ekle" Width="200" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"
                Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderBrush="#388E3C" BorderThickness="1" Click="SaveTransactionButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <Border VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="1" Background="#DDD" Margin="10,80,10,0"/>
    </Grid>
</Page>

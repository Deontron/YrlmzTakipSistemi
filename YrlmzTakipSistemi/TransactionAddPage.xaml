<Page x:Class="YrlmzTakipSistemi.TransactionAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YrlmzTakipSistemi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="İşlem Ekleme Sayfası">

    <Grid Background="#2B2B2B">
        <TextBlock Name="TitleTextBlock"
                   Text="Yeni İşlem Ekle" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#FFFFFF" 
                   Margin="0,20,0,0"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0" Grid.Column="0">
                    <TextBlock Text="Açıklama:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                    <TextBox Name="DescriptionTextBox" Width="250" Height="35" FontSize="14"
                             Background="#1E1E1E" Foreground="White" BorderBrush="#444444" BorderThickness="1"/>
                </StackPanel>

                <Expander Header="Ürünler" FontSize="20" IsExpanded="False" Background="#3B4D61" Foreground="White" Margin="10,10,10,0" Padding="5" Grid.Column="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ListBox x:Name="ProductListBox" ItemsSource="{Binding Products}" Background="#444444" BorderBrush="#444444" SelectionChanged="ProductSelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Tarih}" FontSize="16" Padding="5" Width="150" Foreground="White" />
                                        <TextBlock Text="{Binding Isim}" FontSize="16" Padding="5" Width="150" Foreground="White" />
                                        <TextBlock Text="{Binding Fiyat}" FontSize="16" Padding="5" Width="100" Foreground="#388E3C"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Expander>

                <CheckBox x:Name="SaveProductBox" Content="Ürünü Kaydet" FontSize="20" Foreground="White" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,10,10,0" Grid.Column="2"/>
            </Grid>

            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Notlar:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                    <TextBox Name="NoteTextBox" Width="250" Height="35" FontSize="18" Background="#1E1E1E" Foreground="White" BorderBrush="#444444" BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Adet:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                    <TextBox Name="QuantityTextBox" Width="250" Height="35" FontSize="18" Background="#1E1E1E" Foreground="White" BorderBrush="#444444" BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Fiyat:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                    <TextBox Name="PriceTextBox" Width="250" Height="35" FontSize="18" Background="#1E1E1E" Foreground="White" BorderBrush="#444444" BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Tutar:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                    <TextBox Name="AmountTextBox" Width="250" Height="35" FontSize="18" Background="#1E1E1E" Foreground="White" BorderBrush="#444444" BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Ödenen:" Width="100" FontSize="20" Foreground="White" VerticalAlignment="Center" />
                    <TextBox Name="PaidTextBox" Width="250" Height="35" FontSize="18" Background="#1E1E1E" Foreground="White" BorderBrush="#444444" BorderThickness="1"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button Content="Geri" Background="#3B4D61" Style="{StaticResource ModernButtonStyle}" Click="BackButton_Click"/>
            <Button Content="İşlem Ekle" Background="#388E3C" Style="{StaticResource ModernButtonStyle}" Click="SaveTransactionButton_Click"/>
            <Button Content="Ürünleri Düzenle" Background="#1976D2" Style="{StaticResource ModernButtonStyle}" Click="ManageProductsButton_Click"/>
        </StackPanel>

    </Grid>
</Page>

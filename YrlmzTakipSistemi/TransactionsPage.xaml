<Page x:Class="YrlmzTakipSistemi.TransactionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YrlmzTakipSistemi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="İşlem Sayfası">

    <Grid Background="#F4F4F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Name="TitleTextBlock" Text="İşlemler" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="10" Grid.Row="0" />

        <DataGrid Name="TransactionsDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10"
              AutoGenerateColumns="True" CanUserAddRows="False" ColumnWidth="*" Grid.Row="1" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Margin="10">

            <Button Content="Seçili İşlemi Sil" Width="200" Height="40" Margin="5"
                Background="DarkRed" Foreground="White" FontWeight="Bold" BorderBrush="DarkRed" BorderThickness="1"
                Click="DeleteTransactionButton_Click">
            </Button>
            <Button Content="Yeni İşlem Ekle" Width="200" Height="40" Margin="5"
                Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderBrush="#388E3C" BorderThickness="1"
                Click="AddTransactionButton_Click">
            </Button>
        </StackPanel>
    </Grid>
</Page>

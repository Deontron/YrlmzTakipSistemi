<Page x:Class="YrlmzTakipSistemi.PaymentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YrlmzTakipSistemi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaymentsPage">

    <Grid Background="#2B2B2B" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Name="TitleTextBlock" 
               Text="Ödemeler" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               FontSize="28" 
               FontWeight="Bold" 
               Foreground="#FFFFFF" 
               Margin="0,0,0,20" 
               Grid.Row="0" />

        <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="10" BorderBrush="#444444" BorderThickness="1">
            <DataGrid Name="PaymentsDataGrid" 
                MouseDoubleClick="PaymentsDataGrid_MouseDoubleClick"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" 
                AutoGenerateColumns="False" 
                SelectionMode="Single" 
                CanUserAddRows="False" 
                Background="#1E1E1E" 
                Foreground="#E0E0E0" 
                BorderThickness="0" 
                ColumnWidth="*" 
                RowBackground="#2E2E2E" 
                AlternatingRowBackground="#3B3B3B"
                FontSize="20">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#333333" />
                        <Setter Property="Foreground" Value="#FFFFFF" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Padding" Value="10,5" />
                        <Setter Property="BorderBrush" Value="#444444" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tarih" Binding="{Binding Tarih}" Width="*" />
                    <DataGridTextColumn Header="Müşteri" Binding="{Binding Musteri}" Width="*" />
                    <DataGridTextColumn Header="Borçlu" Binding="{Binding Borclu}" Width="*" />
                    <DataGridTextColumn Header="KaşideYeri" Binding="{Binding KasideYeri}" Width="*" />
                    <DataGridTextColumn Header="Kategori" Binding="{Binding KategoriDescription}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Kategori}" Value="1">
                                        <Setter Property="Foreground" Value="#3F51B5"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Kategori}" Value="2">
                                        <Setter Property="Foreground" Value="#9C27B0"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Kategori}" Value="3">
                                        <Setter Property="Foreground" Value="#009688"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Tutar" Binding="{Binding Tutar}" Width="*" />
                    <DataGridTextColumn Header="ÖdemeTarihi" Binding="{Binding OdemeTarihi}" Width="*" />
                    <DataGridTextColumn Header="Durum" Binding="{Binding OdendiMiDescription}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding OdendiMi}" Value="True">
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding OdendiMi}" Value="False">
                                        <Setter Property="Foreground" Value="#F44336"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="0" Visibility="Collapsed" />
                    <DataGridTextColumn Header="CustomerId" Binding="{Binding CustomerId}" Width="0" Visibility="Collapsed" />
                </DataGrid.Columns>
            </DataGrid>

        </Border>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Margin="0,20,0,0">
            <Button Content="Seçili Ödemeyi Sil" Style="{StaticResource ModernButtonStyle}" Background="#D32F2F" Click="DeletePaymentButton_Click"/>
            <Button Content="Güncelle" Background="#1976D2" Style="{StaticResource ModernButtonStyle}" Click="DeletePaymentButton_Click"/>
        </StackPanel>
    </Grid>
</Page>

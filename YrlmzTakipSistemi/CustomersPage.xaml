<Page x:Class="YrlmzTakipSistemi.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Müşteriler Sayfası">

    <Grid Background="#F4F4F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Müşteriler" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="10" Grid.Row="0" />

        <DataGrid Name="CustomersDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10"
                  AutoGenerateColumns="True" SelectionMode="Single" CanUserAddRows="False" Background="#FFFFFF" ColumnWidth="*"
                   BorderBrush="#DDD" BorderThickness="1"
                  RowBackground="#F9F9F9" AlternatingRowBackground="#F1F1F1" Grid.Row="1">
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Margin="10">

            <Button Content="Seçili Müşteriyi Sil" Width="200" Height="40" Margin="5"
                    Background="DarkRed" Foreground="White" FontWeight="Bold" BorderBrush="DarkRed" BorderThickness="1"
                    Click="DeleteCustomerButton_Click">
            </Button>
            <Button Content="Yeni Müşteri Ekle" Width="200" Height="40" Margin="5"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderBrush="#388E3C" BorderThickness="1"
                    Click="AddCustomerButton_Click">
            </Button>

            <Button Content="Seçili Müşteriye Git" Width="200" Height="40" Margin="5"
                    Background="DarkBlue" Foreground="White" FontWeight="Bold" BorderBrush="DarkBlue" BorderThickness="1"
                    Click="ShowTransactionsButton_Click">
            </Button>
        </StackPanel>
    </Grid>
</Page>

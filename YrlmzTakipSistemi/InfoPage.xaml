<Page x:Class="YrlmzTakipSistemi.InfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YrlmzTakipSistemi"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InfoPage">

    <Grid Background="#2B2B2B">
        <TextBlock Text="Müşteri Bilgileri" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               FontSize="28" 
               FontWeight="Bold" 
               Foreground="#FFFFFF" 
               Margin="0,20,0,0"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="İsim:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="NameTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Unvan:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="LongNameTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="İletişim:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="ContactTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Adres:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="AddressTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="VergiNo:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="TaxNoTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="VergiDairesi:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="TaxOfficeTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Alacak:" Width="100" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center" />
                <TextBox Name="SumTextBox" Width="250" Height="35" FontSize="14" Background="#1E1E1E" Foreground="#FFFFFF" BorderBrush="#444444" BorderThickness="1"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="2" Margin="0,20,0,0">
            <Button Content="Geri" Background="#3B4D61" Style="{StaticResource ModernButtonStyle}" Click="BackButton_Click"/>
            <Button Content="Güncelle" Background="#1976D2" Style="{StaticResource ModernButtonStyle}" Click="UpdateCustomerButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
